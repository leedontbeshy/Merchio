{
  "compilerOptions": {
    "target": "ES2022",               
    "module": "commonjs",             
    "lib": ["ES2022"],               
    "outDir": "./dist",              
    "rootDir": "./src",              
    "strict": true,                  
    "esModuleInterop": true,         
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,       
    "moduleResolution": "node",      
    "sourceMap": true,               
    "declaration": false,             
    "declarationMap": false,          
    "removeComments": true,          
    "noUnusedLocals": true,          
    "noUnusedParameters": true,      
    "noImplicitReturns": true,       
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@/common/*": ["common/*"],
      "@/core/*": ["core/*"],
      "@/features/*": ["features/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
