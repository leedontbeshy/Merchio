{
  "compilerOptions": {

    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",


    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,


    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
